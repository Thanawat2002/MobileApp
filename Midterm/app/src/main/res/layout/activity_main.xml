<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="261dp"
            android:layout_height="106dp"
            android:layout_weight="1"
            android:background="#FDD835"
            android:text="ข้อสอบกลางภาค 060243118"
            android:textAlignment="center"
            android:textColor="#3949AB"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:background="#FDD835"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="622dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGrade"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#5E35B1"
            android:drawableRight="@android:drawable/btn_star_big_on"
            android:text="โปรแกรมคำนวณเกรดเฉลี่ย"
            app:iconGravity="end"
            app:iconTint="#FDD835" />

        <Button
            android:id="@+id/btnTax"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#5E35B1"
            android:drawableRight="@android:drawable/btn_star_big_on"
            android:text="โปรแกรมคำนวณภาษี"
            app:iconGravity="end"
            app:iconTint="#FDD835" />

        <Button
            android:id="@+id/btnImage"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#5E35B1"
            android:drawableRight="@android:drawable/btn_star_big_on"
            android:text="โปรแกรมนำเสนอภาพ"
            app:iconGravity="end"
            app:iconTint="#FDD835" />

        <Button
            android:id="@+id/button8"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#5E35B1"
            android:drawableRight="@android:drawable/btn_star_big_on"
            android:text="เกื่ยวกับโปรแกรม"
            app:iconGravity="end"
            app:iconTint="#FDD835" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@android:drawable/ic_media_play" />

    </LinearLayout>

</LinearLayout>